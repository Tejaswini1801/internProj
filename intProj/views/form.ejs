<% include partials/header.ejs %>
    <div class="container">
       
        <form class="add-player-form"  method="post" >
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="Title" value="<%- task.Title %>"  placeholder="Title" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="Description" value="<%- task.Description %>" placeholder="Description" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="Date" value="<%- task.Date %>"  placeholder="Date" required>
                </div>
            </div>
            
            <button class="btn btn-primary float-right">SAVE</button>
            <input type = "hidden" value= "<%- task.Id %>" />
        </form>
    </div>
</div>
</body>
</html>
